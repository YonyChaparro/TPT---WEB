{{>navigationEmpleados}}
<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">LISTA DE EMPLEADOS</h3>
        {{#if Empleado}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>ID Empleado</th>
                        <th>ID Personal</th>
                        <th>Puesto</th>
                        <th>Salario</th>
                        <th>Fecha de contrataci√≥n</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Empleado}}
                    <tr>
                        <td>{{Emp_id}}</td>
                        <td>{{Emp_per_id}}</td>
                        <td>{{Emp_puesto}}</td>
                        <td>{{Emp_salario}}</td>
                        <td>{{Emp_fecha_contratacion}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/edit/{{Emp_id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                                <a href="/delete/{{Emp_id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="9">REGISTRO DE PERSONAS</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear una persona</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para crear un Empleado</p>
                    <a href="/addEmpleados" class=" btn btn-primary">ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>