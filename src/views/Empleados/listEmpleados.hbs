{{>navigationEmpleados}}
<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">Lista de empleados</h3>
        {{#if Empleado}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>ID Persona</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Dirección</th>
                        <th>Tipo</th>
                        <th>Identificación</th>
                        <th>Puesto</th>
                        <th>Salario</th>
                        <th>Fecha de Contratación</th>
                        <th>ID Empleado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Empleado}}
                    <tr>
                        <td>{{this.Per_id}}</td>
                        <td>{{this.Per_nombre}}</td>
                        <td>{{this.Per_telefono}}</td>
                        <td>{{this.Per_email}}</td>
                        <td>{{this.Per_direccion}}</td>
                        <td>{{this.Per_tipo}}</td>
                        <td>{{this.Per_tipo_identificacion}}</td>
                        <td>{{this.Emp_puesto}}</td>
                        <td>{{this.Emp_salario}}</td>
                        <td>{{this.Emp_fecha_contratacion}}</td>
                        <td>{{this.Emp_id}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editEmpleados/{{this.Emp_id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                                <a href="/deleteEmpleados/{{this.Emp_id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="12"> |</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear un Empleado</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este botón para que puedas registrar un empleado</p>
                    <a href="/addEmpleados" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
