{{>navigationTaller}}
<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">Lista de Talleres</h3>
        {{#if talleres}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each talleres}}
                    <tr>
                        <td>{{Tal_id}}</td>
                        <td>{{Tal_nombre}}</td>
                        <td>{{Tal_direccion}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editTaller/{{Tal_id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                                <a href="/deleteTaller/{{Tal_id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="4">REGISTRO DE TALLERES</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>No hay talleres registrados</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este botón para registrar un nuevo taller</p>
                    <a href="/addTaller" class="btn btn-primary">Agregar Taller</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
