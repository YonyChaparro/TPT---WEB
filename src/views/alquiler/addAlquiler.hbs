{{>navigationAlquiler}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="text-uppercase">Registrar Alquiler</h3>
                </div>
                <div class="card-body">
                    <form action="/addAlquiler" method="post">
                        <div class="mb-3">
                            <label for="Alq_cliente" class="form-label">Cliente</label>
                            <select name="Alq_cliente" class="form-select" required>
                                {{#each clientes}}
                                    <option value="{{this.Cli_id}}">{{this.Per_nombre}} (ID: {{this.Cli_id}})</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Alq_vehiculo_placa" class="form-label">Vehículo</label>
                            <select name="Alq_vehiculo_placa" class="form-select" required>
                                {{#each vehiculos}}
                                    <option value="{{this.Veh_placa}}">{{this.Veh_marca}} {{this.Veh_modelo}} ({{this.Veh_placa}})</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Alq_tipo" class="form-label">Tipo de Alquiler</label>
                            <select name="Alq_tipo" class="form-select" required>
                                {{#each tipos}}
                                    <option value="{{this.Tip_Alq_id}}">{{this.Tip_Alq_nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Alq_fecha_inicio" class="form-label">Fecha de Inicio</label>
                            <input type="date" name="Alq_fecha_inicio" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="Alq_duracion" class="form-label">Duración (horas)</label>
                            <input type="number" name="Alq_duracion" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="Alq_estado" class="form-label">Estado</label>
                            <select name="Alq_estado" class="form-select" required>
                                <option value="Activo">Activo</option>
                                <option value="Finalizado">Finalizado</option>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
