{{>navigationClientes}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR NUEVO CLIENTE</h3>
                </div>
                <div class="card-body">
                    <form action="/addClientes" method="post">

                    <div class="input-group mt-2">
                        <label for="Per_id" class="input-group-text">ID</label>
                        <input class="form-control" type="number" name="Per_id" id="Per_id"  required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="Per_nombre" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="Per_nombre" id="Per_nombre"  required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="Per_telefono" class="input-group-text">Teléfono</label>
                        <input class="form-control" type="number" name="Per_telefono" id="Per_telefono" required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="Per_email" class="input-group-text">Email</label>
                        <input class="form-control" type="email" name="Per_email" id="Per_email" required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="Per_direccion" class="input-group-text">Direccion</label>
                        <input class="form-control" type="text" name="Per_direccion" id="Per_direccion" required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="Per_tipo" class="input-group-text">Tipo de Persona</label>
                        <select id="Per_tipo" name="Per_tipo" class="form-control">
                            <option value="Natural">Natural</option>
                            <option value="Juridica">Jurídica</option>
                        </select>
                    </div>

                    <div class="input-group mt-2">
                        <label for="Per_tipo_identificacion" class="input-group-text">Tipo de Identificación</label>
                        <select id="Per_tipo_identificacion" name="Per_tipo_identificacion" class="form-control">
                            <option value="CC">CC</option>
                            <option value="NIP">NIP</option>
                            <option value="NUIP">NUIP</option>
                            <option value="TI">TI</option>
                            <option value="CE">CE</option>
                        </select>
                    </div>

                    <div class="input-group mt-2">
                        <label for="Cli_usuario" class="input-group-text">Usuario</label>
                        <input class="form-control" type="text" name="Cli_usuario" id="Cli_usuario" required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="Cli_contrasena" class="input-group-text">Contraseña</label>
                        <input class="form-control" type="password" name="Cli_contrasena" id="Cli_contrasena" required>
                    </div>

                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Crear</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
