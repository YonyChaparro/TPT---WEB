
{{>navigationFactura}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="text-uppercase">Registrar Factura</h3>
                </div>
                <div class="card-body">
                    <form action="/addFactura" method="post">
                        <div class="mb-3">
                            <label for="Fac_alquiler_id" class="form-label">ID de Alquiler</label>
                            <select name="Fac_alquiler_id" class="form-select" required>
                                {{#each alquileres}}
                                    <option value="{{this.Alq_id}}">Alquiler ID: {{this.Alq_id}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Fac_fecha" class="form-label">Fecha</label>
                            <input type="date" name="Fac_fecha" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="Fac_impuesto" class="form-label">Impuesto</label>
                            <input type="number" step="0.01" name="Fac_impuesto" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="Fac_descuento" class="form-label">Descuento</label>
                            <input type="number" step="0.01" name="Fac_descuento" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="Fac_metodo_pago" class="form-label">Método de Pago</label>
                            <select name="Fac_metodo_pago" class="form-select" required>
                                <option value="Tarjeta débito">Tarjeta débito</option>
                                <option value="Tarjeta crédito">Tarjeta crédito</option>
                                <option value="Efectivo">Efectivo</option>
                                <option value="Transferencia">Transferencia</option>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
