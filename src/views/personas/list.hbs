<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">Lista de personas</h3>
        {{#if personas}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Direccion</th>
                        <th>Tipo de persona</th>
                        <th>Tipo de identificación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{lastname}}</td>
                        <td>{{age}}</td>
                        <td>{{Per_telefono}}</td>
                        <td>{{Per_email}}</td>
                        <td>{{Per_direccion}}</td>
                        <td>{{Per_tipo}}</td>
                        <td>{{Per_tipo_identificacion}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/edit/{{id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                                <a href="/delete/{{id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="9">REGISTRO DE PERSONAS</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear una persona</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para quej puedas registrar una persona</p>
                    <a href="/add" class=" btn btn-primary">ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>