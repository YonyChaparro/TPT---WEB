{{>navigationProveedores}}
<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">Lista de Proveedores</h3>
        {{#if Proveedor}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>ID Persona</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Dirección</th>
                        <th>Tipo</th>
                        <th>Identificación</th>
                        <th>Costo del Servicio</th>
                        <th>Servicio</th>
                        <th>ID Proveedor</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Proveedor}}
                    <tr>
                        <td>{{this.Per_id}}</td>
                        <td>{{this.Per_nombre}}</td>
                        <td>{{this.Per_telefono}}</td>
                        <td>{{this.Per_email}}</td>
                        <td>{{this.Per_direccion}}</td>
                        <td>{{this.Per_tipo}}</td>
                        <td>{{this.Per_tipo_identificacion}}</td>
                        <td>{{this.Pro_costo_servicio}}</td>
                        <td>{{this.Pro_servicio}}</td>
                        <td>{{this.Pro_id}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editProveedores/{{this.Pro_id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                                <a href="/deleteProveedores/{{this.Pro_id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="11"> |</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear un Proveedor</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este botón para que puedas registrar un proveedor</p>
                    <a href="/addProveedores" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
