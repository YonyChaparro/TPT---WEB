{{>navigationServicios}}
<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">Lista de Servicios</h3>

        {{#if Servicio}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>ID Servicio</th>
                        <th>Cliente</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Vehículo</th>
                        <th>Tipo</th>
                        <th>Fecha Inicio</th>
                        <th>Duración (horas)</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Servicio}}
                    <tr>
                        <td>{{this.Alq_id}}</td>
                        <td>{{this.Per_nombre}}</td>
                        <td>{{this.Per_telefono}}</td>
                        <td>{{this.Per_email}}</td>
                        <td>{{this.Veh_placa}} - {{this.Veh_marca}} {{this.Veh_modelo}}</td>
                        <td>{{this.Alq_tipo}}</td>
                        <td>{{this.Alq_fecha_inicio}}</td>
                        <td>{{this.Alq_duracion}}</td>
                        <td>{{this.Alq_estado}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editServicios/{{this.Alq_id}}" class="btn btn-warning">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/deleteServicios/{{this.Alq_id}}" class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="10"> |</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>No hay servicios registrados</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este botón para registrar un nuevo servicio</p>
                    <a href="/addServicios" class="btn btn-primary">Crear Servicio</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
