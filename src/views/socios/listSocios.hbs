{{>navigationSocios}}
<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">Lista de socios</h3>
        {{#if Socio}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>ID Persona</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Número de Acciones</th>
                        <th>ID Socio</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Socio}}
                    <tr>
                        <td>{{this.Per_id}}</td>
                        <td>{{this.Per_nombre}}</td>
                        <td>{{this.Per_telefono}}</td>
                        <td>{{this.Per_email}}</td>
                        <td>{{this.Soc_numero_de_acciones}}</td>
                        <td>{{this.Soc_id}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editSocios/{{this.Soc_id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                                <a href="/deleteSocios/{{this.Soc_id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="7"> |</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear un Socio</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este botón para que puedas registrar un socio</p>
                    <a href="/addSocios" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
