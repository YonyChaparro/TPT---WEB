{{>navigationTipo_Alquiler}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">AGREGAR NUEVO TIPO DE ALQUILER</h3>
                </div>
                <div class="card-body">
                    <form action="/addTipo_Alquiler" method="post">

                        <div class="input-group mt-2">
                            <label for="Tip_Alq_id" class="input-group-text">ID</label>
                            <input class="form-control" type="number" name="Tip_Alq_id" id="Tip_Alq_id" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="Tip_Alq_nombre" class="input-group-text">Nombre</label>
                            <select class="form-control" name="Tip_Alq_nombre" id="Tip_Alq_nombre" required>
                                <option value="Estándar">Estándar</option>
                                <option value="Completo">Completo</option>
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="Tip_Alq_costo_por_hora" class="input-group-text">Costo por Hora</label>
                            <input class="form-control" type="number" name="Tip_Alq_costo_por_hora" id="Tip_Alq_costo_por_hora" required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>