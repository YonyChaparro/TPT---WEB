{{>navigationTipo_Alquiler}}
<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">Lista de Tipos de Alquiler</h3>
        {{#if tipoAlquileres}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Costo por Hora</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each tipoAlquileres}}
                    <tr>
                        <td>{{Tip_Alq_id}}</td>
                        <td>{{Tip_Alq_nombre}}</td>
                        <td>{{Tip_Alq_costo_por_hora}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editTipo_Alquiler/{{Tip_Alq_id}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                                <a href="/deleteTipo_Alquiler/{{Tip_Alq_id}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="4">REGISTRO DE TIPOS DE ALQUILER</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>No hay tipos de alquiler registrados</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este bot√≥n para registrar un nuevo tipo de alquiler</p>
                    <a href="/addTipo_Alquiler" class="btn btn-primary">Agregar Tipo de Alquiler</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
