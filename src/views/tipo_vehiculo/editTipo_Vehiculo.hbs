{{>navigationTipo_Vehiculo}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITAR TIPO DE VEHÍCULO</h3>
                </div>
                <div class="card-body">
                    <form action="/editTipo_Vehiculo/{{tipoVehiculo.Tip_id}}" method="post">

                        <div class="input-group mt-2">
                            <label for="Tip_nombre" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="Tip_nombre" id="Tip_nombre" value="{{tipoVehiculo.Tip_nombre}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="Tip_tarifa" class="input-group-text">Tarifa</label>
                            <input class="form-control" type="number" step="0.01" name="Tip_tarifa" id="Tip_tarifa" value="{{tipoVehiculo.Tip_tarifa}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="Tip_capacidad_carga" class="input-group-text">Capacidad de Carga</label>
                            <input class="form-control" type="number" step="0.01" name="Tip_capacidad_carga" id="Tip_capacidad_carga" value="{{tipoVehiculo.Tip_capacidad_carga}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="Tip_combustible" class="input-group-text">Combustible</label>
                            <select class="form-control" name="Tip_combustible" id="Tip_combustible" required>
                                <option value="Gasolina" {{#if (eq tipoVehiculo.Tip_combustible 'Gasolina')}}selected{{/if}}>Gasolina</option>
                                <option value="Diesel" {{#if (eq tipoVehiculo.Tip_combustible 'Diesel')}}selected{{/if}}>Diesel</option>
                                <option value="Gas" {{#if (eq tipoVehiculo.Tip_combustible 'Gas')}}selected{{/if}}>Gas</option>
                                <option value="Eléctrico" {{#if (eq tipoVehiculo.Tip_combustible 'Eléctrico')}}selected{{/if}}>Eléctrico</option>
                            </select>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
