{{>navigationVehiculos}}
<div class="container">
    <div class="row mt-5 container mx-auto">
        <h3 class="text-center text-uppercase p-2">Lista de Vehículos</h3>
        {{#if Vehiculo}}
        <div class="col-md-3 w-100 container mx-auto">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>Placa</th>
                        <th>Ciudad Registro</th>
                        <th>Tipo</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Año</th>
                        <th>Kilometraje</th>
                        <th>Certificado RUNT</th>
                        <th>SOAT Vigencia</th>
                        <th>SOAT Vigente</th>
                        <th>RTM Vigencia</th>
                        <th>RTM Vigente</th>
                        <th>Norma Ambiental</th>
                        <th>GPS Instalado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Vehiculo}}
                    <tr>
                        <td>{{this.Veh_placa}}</td>
                        <td>{{this.Veh_cuidad_de_registro}}</td>
                        <td>{{this.Veh_tipo}}</td>
                        <td>{{this.Veh_marca}}</td>
                        <td>{{this.Veh_modelo}}</td>
                        <td>{{this.Veh_año}}</td>
                        <td>{{this.Veh_kilometraje}}</td>
                        <td>{{#if this.Veh_certificado_runt}}Sí{{else}}No{{/if}}</td>
                        <td>{{this.Veh_soat_vigencia}}</td>
                        <td>{{#if this.Veh_soat_vigente}}Sí{{else}}No{{/if}}</td>
                        <td>{{this.Veh_rtm_vigencia}}</td>
                        <td>{{#if this.Veh_rtm_vigente}}Sí{{else}}No{{/if}}</td>
                        <td>{{this.Veh_norma_ambiental}}</td>
                        <td>{{#if this.Veh_gps_instalado}}Sí{{else}}No{{/if}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/editVehiculos/{{this.Veh_placa}}" class="btn btn-warning">
                                <i class="fa-solid fa-pencil"></i></a>
                                <a href="/deleteVehiculos/{{this.Veh_placa}}" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>No hay Vehículos Registrados</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este botón para registrar un vehículo</p>
                    <a href="/addVehiculos" class=" btn btn-primary">Agregar Vehículo</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
